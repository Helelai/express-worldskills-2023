<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.session2.SignInActivity">

    <TextView
        android:id="@+id/haveAccTWLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto"
        android:text="or log in using"
        android:textColor="@color/grayHint"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <ImageButton
        android:id="@+id/googleSignInB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/haveAccTWLogIn"
        app:srcCompat="@drawable/ic_google" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LogInB">

        <TextView
            android:id="@+id/RememberPassTW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:text="Already have an account?"
            android:textColor="@color/grayHint"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/ResendB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:onClick="SignUpBLogInClick"
            android:text="Sign Up"
            android:textColor="@color/titleBlue"
            android:textSize="14dp" />

    </LinearLayout>

    <Button
        android:id="@+id/LogInB"
        android:layout_width="342dp"
        android:layout_height="46dp"
        android:layout_marginTop="187dp"
        android:backgroundTint="@color/button_background_color"
        android:enabled="false"
        android:fontFamily="@font/roboto_bold"
        android:onClick="SignInBClick"
        android:paddingLeft="146px"
        android:paddingTop="15px"
        android:paddingRight="146px"
        android:paddingBottom="15px"
        android:text="Log in"
        android:textColor="@color/button_text_enabled_disabled_color"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RememberPassword" />

    <TextView
        android:id="@+id/ForgotPasswordTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_medium"
        android:onClick="ForgotPassBClick"
        android:text="Forgot Password?"
        android:textColor="@color/titleBlue"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/RememberPassword"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <CheckBox
            android:id="@+id/RememberPasswordCHBX"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/gray_checkbox"
            android:button="@android:color/transparent"
            android:onClick="RememberPasswordCHBXClick" />

        <TextView
            android:id="@+id/RememberPass"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="4dp"
            android:text="Remember password"
            android:textColor="@color/grayHint"
            android:textSize="12dp"
            app:lineHeight="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/WelcomeBackTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="155dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Welcome Back"
        android:textAlignment="center"
        android:textColor="#3A3A3A"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="30dp" />

    <TextView
        android:id="@+id/CompleteTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Fill in your email and password to continue"
        android:textAlignment="center"
        android:textColor="@color/grayHint"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeBackTW"
        app:lineHeight="16dp" />

    <TextView
        android:id="@+id/EmailAdressTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Email Address"
        android:textColor="@color/grayHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CompleteTW" />

    <EditText
        android:id="@+id/EmailET"
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_bord_pltxt"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="***********@mail.com"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingTop="14px"
        android:paddingRight="253px"
        android:paddingBottom="14px"
        android:textColor="@color/blackDefault"
        android:textColorHint="@color/lightGrayHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailAdressTW" />

    <TextView
        android:id="@+id/PasswordTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Password"
        android:textColor="@color/grayHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailET" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_bord_pltxt"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordTW">

        <EditText
            android:id="@+id/PasswordETNewPass"
            android:layout_width="310dp"
            android:layout_height="44dp"
            android:background="@null"
            android:ems="10"
            android:hint="**********"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="14px"
            android:paddingRight="10px"
            android:paddingBottom="14px"
            android:textColor="@color/blackDefault"
            android:textColorHint="@color/lightGrayHint" />

        <ImageButton
            android:id="@+id/HideShowPassBNewPass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="HideShowPassBClick"
            app:srcCompat="@drawable/ic_eye_off" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>