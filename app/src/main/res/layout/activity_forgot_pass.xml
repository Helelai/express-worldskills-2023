<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.session2.ForgotPassActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SendOTPB">

        <TextView
            android:id="@+id/RememberPassTW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:text="Remember password? Back to"
            android:textColor="@color/grayHint"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/SignInBPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:onClick="SignInBPassClick"
            android:paddingLeft="2dp"
            android:text="Sign in"
            android:textColor="@color/titleBlue"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/ForgotPassTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="155dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Forgot Password"
        android:textAlignment="center"
        android:textColor="#3A3A3A"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="30dp" />

    <TextView
        android:id="@+id/EnterEmailTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Enter your email address"
        android:textAlignment="center"
        android:textColor="@color/grayHint"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ForgotPassTW"
        app:lineHeight="16dp" />

    <TextView
        android:id="@+id/emailAdressTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Email Address"
        android:textColor="@color/grayHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterEmailTW" />

    <EditText
        android:id="@+id/emailET"
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_bord_pltxt"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="***********@mail.com"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingTop="14px"
        android:paddingRight="253px"
        android:paddingBottom="14px"
        android:textColor="@color/blackDefault"
        android:textColorHint="@color/lightGrayHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailAdressTW" />

    <Button
        android:id="@+id/SendOTPB"
        android:layout_width="342dp"
        android:layout_height="46dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/button_background_color"
        android:enabled="false"
        android:fontFamily="@font/roboto_bold"
        android:onClick="SendOTPBClick"
        android:paddingLeft="146px"
        android:paddingTop="15px"
        android:paddingRight="146px"
        android:paddingBottom="15px"
        android:text="Send OTP"
        android:textColor="@color/button_text_enabled_disabled_color"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailET" />
</androidx.constraintlayout.widget.ConstraintLayout>