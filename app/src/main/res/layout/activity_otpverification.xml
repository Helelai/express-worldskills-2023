<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.session2.OTPVerificationActivity">

    <Button
        android:id="@+id/setNewPassB"
        android:layout_width="342dp"
        android:layout_height="46dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="@color/button_background_color"
        android:enabled="false"
        android:fontFamily="@font/roboto_bold"
        android:onClick="SetNewPassBClick"
        android:paddingLeft="146px"
        android:paddingTop="15px"
        android:paddingRight="146px"
        android:paddingBottom="15px"
        android:text="Set New Password"
        android:textColor="@color/button_text_enabled_disabled_color"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/RememberPassTW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:text="If you didnâ€™t receive code, "
            android:textColor="@color/grayHint"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/ResendB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:onClick="resendBClick"
            android:paddingLeft="2dp"
            android:text=" resend after 1:00"
            android:textColor="@color/grayHint"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/OTPVerifTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="158dp"
        android:fontFamily="@font/roboto_medium"
        android:text="OTP Verification"
        android:textAlignment="center"
        android:textColor="#3A3A3A"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="30dp" />

    <TextView
        android:id="@+id/OTPSentTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Enter the 6 digit numbers sent to your email"
        android:textAlignment="center"
        android:textColor="@color/grayHint"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OTPVerifTW"
        app:lineHeight="16dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OTPSentTW">

        <EditText
            android:id="@+id/inputNumberET1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="fill_vertical"
            android:background="@drawable/gray_input_number_otp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:textSize="14dp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="32dp" />

        <EditText
            android:id="@+id/inputNumberET2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="fill_vertical"
            android:background="@drawable/gray_input_number_otp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:textSize="14dp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="32dp" />

        <EditText
            android:id="@+id/inputNumberET3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="fill_vertical"
            android:background="@drawable/gray_input_number_otp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:textSize="14dp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="32dp" />

        <EditText
            android:id="@+id/inputNumberET4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="fill_vertical"
            android:background="@drawable/gray_input_number_otp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:textSize="14dp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="32dp" />

        <EditText
            android:id="@+id/inputNumberET5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="fill_vertical"
            android:background="@drawable/gray_input_number_otp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:textSize="14dp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="32dp" />

        <EditText
            android:id="@+id/inputNumberET6"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="fill_vertical"
            android:background="@drawable/gray_input_number_otp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:textSize="14dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>