<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".session1.OnboardingActivity">

    <ImageView
        android:id="@+id/OnBoarding1IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="111dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/onboarding1" />

    <TextView
        android:id="@+id/DeliveryTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:width="297dp"
        android:height="58dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Quick Delivery At Your Doorstep"
        android:textAlignment="center"
        android:textColor="@color/titleBlue"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OnBoarding1IV"
        app:lineHeight="24dp" />

    <TextView
        android:id="@+id/DeliveryTextTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:width="271dp"
        android:height="50dp"
        android:fontFamily="@font/roboto"
        android:text="Enjoy quick pick-up and delivery to your destination"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeliveryTW"
        app:lineHeight="20dp" />

    <LinearLayout
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeliveryTextTW">

        <Button
            android:id="@+id/SkipB"
            android:layout_width="100px"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/roboto_bold"
            android:padding="9.38px"
            android:paddingStart="18.18px"
            android:paddingLeft="18.18px"
            android:paddingTop="9.38px"
            android:paddingEnd="18.18px"
            android:paddingRight="18.18px"
            android:paddingBottom="9.38px"
            android:text="Skip"
            android:textColor="@color/titleBlue"
            app:cornerRadius="4.69dp"
            app:strokeColor="@color/titleBlue"
            app:strokeWidth="2px" />

        <Space
            android:layout_width="142px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fitsSystemWindows="true" />

        <Button
            android:id="@+id/NextB"
            android:layout_width="100px"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/titleBlue"
            android:fontFamily="@font/roboto"
            android:onClick="NextBClick"
            android:text="Next"
            app:cornerRadius="4.69dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>