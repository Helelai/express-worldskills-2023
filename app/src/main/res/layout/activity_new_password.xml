<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.session2.NewPasswordActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Password"
        android:textColor="@color/grayHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterNewPassTW" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_bord_pltxt"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <EditText
            android:id="@+id/PasswordETNewPass"
            android:layout_width="310dp"
            android:layout_height="44dp"
            android:background="@null"
            android:ems="10"
            android:hint="**********"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="14px"
            android:paddingRight="10px"
            android:paddingBottom="14px"
            android:textColor="@color/blackDefault"
            android:textColorHint="@color/lightGrayHint" />

        <ImageButton
            android:id="@+id/HideShowPassBNewPass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="HideShowPassBClick"
            app:srcCompat="@drawable/ic_eye_off" />

    </LinearLayout>

    <TextView
        android:id="@+id/confirmPasswordTWNewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Confirm Password"
        android:textColor="@color/grayHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_bord_pltxt"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordTWNewPass">

        <EditText
            android:id="@+id/ConfirmPasswordETNewPass"
            android:layout_width="310dp"
            android:layout_height="44dp"
            android:background="@null"
            android:ems="10"
            android:hint="**********"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="14px"
            android:paddingRight="10px"
            android:paddingBottom="14px"
            android:textColor="@color/blackDefault"
            android:textColorHint="@color/lightGrayHint" />

        <ImageButton
            android:id="@+id/HideShowConfirmPassBNewPass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="HideShowConfirmPassBClick"
            app:srcCompat="@drawable/ic_eye_off" />

    </LinearLayout>

    <TextView
        android:id="@+id/NewPasswordTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="155dp"
        android:fontFamily="@font/roboto_medium"
        android:text="New Password"
        android:textAlignment="center"
        android:textColor="#3A3A3A"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="30dp" />

    <TextView
        android:id="@+id/EnterNewPassTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Enter new password"
        android:textAlignment="center"
        android:textColor="@color/grayHint"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewPasswordTW"
        app:lineHeight="16dp" />

    <Button
        android:id="@+id/setNewPassBNewPass"
        android:layout_width="342dp"
        android:layout_height="46dp"
        android:layout_marginTop="71dp"
        android:backgroundTint="@color/button_background_color"
        android:enabled="false"
        android:fontFamily="@font/roboto_bold"
        android:onClick="SetNewPassBClick"
        android:paddingLeft="146px"
        android:paddingTop="15px"
        android:paddingRight="146px"
        android:paddingBottom="15px"
        android:text="Set New Password"
        android:textColor="@color/button_text_enabled_disabled_color"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
</androidx.constraintlayout.widget.ConstraintLayout>